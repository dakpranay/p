<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:openDrawer="start"
    android:id="@+id/drawerLayout">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/teal_200"
        app:headerLayout="@layout/header_nav"
        app:menu="@menu/options"
        >
    </com.google.android.material.navigation.NavigationView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/clr"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="clr"
            android:backgroundTint="@color/green"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/zero"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/zero"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/black"
            android:text="0"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/equal"
            app:layout_constraintStart_toEndOf="@id/clr" />

        <Button
            android:id="@+id/equal"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/gray"

            android:text="="
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/add"
            app:layout_constraintStart_toEndOf="@id/zero" />

        <Button
            android:id="@+id/add"
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="+"
            android:textSize="30sp"
            android:backgroundTint="@color/Orange"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/equal" />

        <Button
            android:id="@+id/one"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/black"
            android:text="1"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/clr"
            app:layout_constraintEnd_toStartOf="@+id/two"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/two"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="2"
            android:textSize="30sp"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/zero"
            app:layout_constraintEnd_toStartOf="@+id/three"
            app:layout_constraintStart_toEndOf="@id/one" />

        <Button
            android:id="@+id/three"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="3"
            android:textSize="30sp"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/equal"
            app:layout_constraintEnd_toStartOf="@+id/sub"
            app:layout_constraintStart_toEndOf="@id/two" />

        <Button
            android:id="@+id/sub"
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="-"
            android:textSize="30sp"
            android:backgroundTint="@color/Orange"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/three" />

        <Button
            android:id="@+id/four"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="4"
            android:textSize="30sp"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/one"
            app:layout_constraintEnd_toStartOf="@+id/five"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/five"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="5"
            android:textSize="30sp"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/two"
            app:layout_constraintEnd_toStartOf="@+id/six"
            app:layout_constraintStart_toEndOf="@id/four" />

        <Button
            android:id="@+id/six"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="6"
            android:textSize="30sp"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/three"
            app:layout_constraintEnd_toStartOf="@+id/mul"
            app:layout_constraintStart_toEndOf="@id/five" />

        <Button
            android:id="@+id/mul"
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="ร"
            android:textSize="30sp"
            android:backgroundTint="@color/Orange"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/sub"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/six" />

        <Button
            android:id="@+id/seven"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="7"
            android:textSize="30sp"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/four"
            app:layout_constraintEnd_toStartOf="@+id/eight"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/eight"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="8"
            android:textSize="30sp"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/five"
            app:layout_constraintEnd_toStartOf="@+id/nine"
            app:layout_constraintStart_toEndOf="@id/seven" />

        <Button
            android:id="@+id/nine"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/black"
            android:text="9"

            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/six"
            app:layout_constraintEnd_toStartOf="@+id/div"
            app:layout_constraintStart_toEndOf="@id/eight" />

        <Button
            android:id="@+id/div"
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:layout_marginBottom="24dp"
            android:text="รท"
            android:textSize="30sp"
            android:backgroundTint="@color/Orange"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/mul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/nine" />

        <TextView
            android:id="@+id/output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:ems="8"
            android:gravity="right"
            android:padding="13dp"
            android:textColor="@color/green"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/eight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:padding="13dp"
            android:layout_marginBottom="24dp"
            android:gravity="right"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/output"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>
